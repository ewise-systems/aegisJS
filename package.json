{
  "name": "aegisJS",
  "version": "0.0.1",
  "description": "Open source library for interacting with eWise Systems' Aegis 2.0 architecture",
  "main": "src/aegis.js",
  "scripts": {
    "clean": "rm -rf build",
    "prebuid": "npm run clean",
    "build": "webpack --config webpack.config.js",
    "start": "npm run build && node srv/testApp.js",
    "test": "nyc --reporter text mocha --require source-map-support/register --recursive test/**/*.spec.js",
    "artifice": "nyc report && npm test -- --reporter=xunit --reporter-options output=mocha_test_results.xml"
  },
  "keywords": [
    "ewise",
    "aegis"
  ],
  "author": "Rene Calunsag Jr, Jan Almazora",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "mocha": "^6.1.3",
    "nyc": "^14.0.0",
    "source-map-support": "^0.5.12",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.1.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.123",
    "@types/ramda": "^0.26.6",
    "ajv": "^6.10.0",
    "axios": "^0.18.0",
    "folktale": "^2.3.2",
    "lodash": "^4.17.11",
    "ramda": "^0.26.1",
    "typescript": "^3.4.3",
    "uniqid": "^5.0.3",
    "valid-url": "^1.0.9",
    "whatwg-fetch": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ewise-systems/aegisJS.git"
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "include": [
      "**/lib/**/*.js",
      "**/src/*.js"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
